@model IEnumerable<Proyecto1.Models.Producto>

<div class="row pb-3 p-2" style="margin-top:60px;">
    @foreach (var producto in Model)
    {
        <div class="col-lg-3 col-md-6 pt-md-3">
            <div class="row">
                <div class="col-12">
                    <div class="card d-flex flex-column align-items-center"
                         style="border:1px;max-width:100%;max-height:35px;min-height:350px;">
                        <img src="@producto.ImageUrl" class="card-img-top rounded img-fluid"
                             style="max-height:200px;" alt="Alternate Text" />
                        <div class="pl-1">
                            <p class="card-title h5">
                                <b style="color:#2c3e50">@producto.Descripcion</b>
                            </p>
                        </div>
                        <div style="padding-left:5px;">
                            <p>Precio: <b>¢@producto.Precio.ToString("###,###.00")</b></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
